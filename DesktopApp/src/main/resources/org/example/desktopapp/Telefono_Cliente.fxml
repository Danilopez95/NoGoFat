   <children>
      <Label alignment="CENTER" layoutX="84.0" layoutY="14.0" prefHeight="82.0" prefWidth="430.0" text="USUARIOS CON RUTINAS ASIGNADAS" textAlignment="CENTER" textOverrun="CLIP" wrapText="true">
